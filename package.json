{
    "name": "image-server",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "scripts": {
        "dev": "nodemon"
    },
    "dependencies": {
        "@godaddy/terminus": "^4.12.0",
        "@prisma/client": "4.15.0",
        "compression": "^1.7.4",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.0",
        "sharp": "^0.32.1",
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.17",
        "@types/express-fileupload": "^1.4.1",
        "@types/node": "18",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "prisma": "^4.15.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    },
    "prettier": {
        "semi": false,
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5",
        "proseWrap": "always",
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 120
    },
    "nodemonConfig": {
        "ext": "ts",
        "exec": "ts-node -r source-map-support/register src/index.ts",
        "ignore": [
            "src/**/*.test.ts"
        ],
        "watch": [
            ".env",
            "src/**/*.ts"
        ]
    }
}
